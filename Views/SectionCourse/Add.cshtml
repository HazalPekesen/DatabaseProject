
@{
    Layout = null;
}

@model SectionCourse

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="jumbotron">
    <h1 class="display-4"><strong>Database Platform</strong></h1>
    <hr class="my-4">
    <p class="lead">Add Section Course</p>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
</div>

<div class="container">
    <form asp-controller="SectionCourse" asp-action="Add" method="post">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Section Id</label>
            <div class="col-sm-4">
                <input asp-for="SectionId" type="text" class="form-control" id="inputName" placeholder="Section Id">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSurname" class="col-sm-2 col-form-label">Course Id</label>
            <div class="col-sm-4">
                <input asp-for="CourseId" type="text" class="form-control" id="inputSurname" placeholder="Course Id">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">
                <button type="submit" class="btn btn-primary">Add Section Course</button>
                <a type="button" href="/SectionCourse/Index" class="btn btn-outline-primary">Anasayfa'ya Dön!</a>
            </div>
        </div>
    </form>
</div>