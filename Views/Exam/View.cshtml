
@{
    Layout = null;
}

@model List<Exam>

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Exam Data View</title>
    <link rel="stylesheet" href="~/css/tableCss/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
</head>
<body>
    <br /><br /><br />
    <table class="standard-table" cellspacing="0">
        <thead>
            <tr>
                <th>Exam Id</th>
                <th>Name</th>
                <th>Place</th>
                <th>Time</th>
                <th>Update</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExamId</td>
                    <td>@item.Name</td>
                    <td>@item.Place</td>
                    <td>@item.Time</td>
                    <td><a asp-action="Update" asp-controller="Exam" asp-route-id="@item.ExamId" class="button">Update</a></td>
                    <td><a asp-action="Remove" asp-controller="Exam" asp-route-id="@item.ExamId" class="button">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center !important ;">
        <a type="button" href="/Exam/Index" class="btn btn-outline-primary">Anasayfa'ya Dön!</a>
    </div>
</body>
</html>
