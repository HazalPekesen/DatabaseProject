@{
    ViewData["Title"] = "Add";
    Layout = null;
}

@model Student

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="jumbotron">
    <h1 class="display-4"><strong>Database Platform</strong></h1>
    <hr class="my-4">
    <p class="lead">Add Student</p>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
</div>

<!-- Sınav EkLeme Formu-->
<div class="container">
    <form asp-controller="Student" asp-action="Add" method="post">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-4">
                <input asp-for="Name" type="text" class="form-control" id="inputName" placeholder="Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSurname" class="col-sm-2 col-form-label">Department Name</label>
            <div class="col-sm-4">
                <input asp-for="DeptName" type="text" class="form-control" id="inputSurname" placeholder="Department Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputMail" class="col-sm-2 col-form-label">Total Credit</label>
            <div class="col-sm-4">
                <input asp-for="TotCred" type="text" class="form-control" id="inputMail" placeholder="Total Credit">
            </div>
        </div>
        @* <div class="form-group row">
            <label for="inputMail" class="col-sm-2 col-form-label">Exam Marks</label>
            <div class="col-sm-4">
                <input asp-for="ExamMarks" type="text" class="form-control" id="inputMail" placeholder="Exam Marks">
            </div>
        </div>*@
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">
                <button type="submit" class="btn btn-primary">Add Student</button>
                <a type="button" href="/Student/Index" class="btn btn-outline-primary">Anasayfa'ya Dön!</a>
            </div>
        </div>
    </form>
</div>